# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
DATABASE_URL="mysql://usuario:contraseña@localhost:3306/sistema_escuela_tecnica?schema=public"

# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# CONFIGURACIÓN JWT
# ============================================
JWT_SECRET=tu_clave_secreta_super_segura_aqui_cambiar_en_produccion
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=tu_clave_refresh_secreta_aqui
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# CONFIGURACIÓN DE CLOUDINARY
# ============================================
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# ============================================
# CONFIGURACIÓN DE EMAIL (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_contraseña_aplicacion

# ============================================
# CONFIGURACIÓN DE CORS
# ============================================
CORS_ORIGIN=http://localhost:5173

# ============================================
# CONFIGURACIÓN DE ARCHIVOS
# ============================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ============================================
# CONFIGURACIÓN DE BCRYPT
# ============================================
BCRYPT_ROUNDS=10

# ============================================
# CONFIGURACIÓN DE RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
